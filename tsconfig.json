{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["es2015", "es2016", "es2017", "es2018"],
		"rootDir": ".",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"sourceMap": true,
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["**/*.spec.ts"]
}
